<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Create Workout</title>
    <style>
        body {
            background-color: #121212; /* Dark background */
            color: #f1c40f; /* Yellow text for headings and accents */
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        header {
            text-align: center;
            padding: 20px;
            background-color: #1e1e1e;
            border-bottom: 2px solid #f1c40f;
        }

        header h1 {
            margin: 0;
            font-size: 36px;
            color: #f1c40f;
        }

        .timer-section {
            text-align: center;
            margin: 50px 0;
        }

        .timer-display {
            font-size: 80px;
            font-weight: bold;
            background-color: #1e1e1e;
            border: 4px solid #f1c40f;
            border-radius: 10px;
            padding: 20px;
            display: inline-block;
            color: #f1c40f;
        }

        .timer-buttons {
            margin: 20px 0;
        }

        .timer-buttons button {
            font-size: 20px;
            margin: 10px;
            padding: 10px 20px;
            border: 2px solid #f1c40f;
            border-radius: 5px;
            background-color: #f1c40f;
            color: #121212;
            cursor: pointer;
        }

        .timer-buttons button:hover {
            background-color: #d4ac0d;
        }

        .workout-name-section {
            text-align: center;
            margin: 20px 0;
        }

        .workout-name-section input {
            padding: 10px;
            font-size: 18px;
            width: 50%;
            max-width: 400px;
            border: 2px solid #f1c40f;
            border-radius: 5px;
            background-color: #1e1e1e;
            color: #f1c40f;
        }

        .save-button {
            text-align: center;
            margin: 20px 0;
        }

        .save-button button {
            font-size: 20px;
            padding: 10px 30px;
            border: 2px solid #f1c40f;
            border-radius: 5px;
            background-color: #f1c40f;
            color: #121212;
            cursor: pointer;
        }

        .save-button button:hover {
            background-color: #d4ac0d;
        }
    </style>
</head>
<body>

    <header>
        <h1>Create Workout</h1>
    </header>

    <section class="timer-section">
        <div class="timer-display" id="timer">00:00:00</div>
        <div class="timer-buttons">
            <button id="startButton">Start</button>
            <button id="pauseButton">Pause</button>
            <button id="stopButton">Stop</button>
        </div>
    </section>

    <section class="workout-name-section">
        <label for="workoutName">Workout Name:</label>
        <input type="text" id="workoutName" placeholder="Enter workout name">
    </section>

    <div class="save-button">
        <button id="saveWorkoutButton">Save Workout</button>
    </div>


    <script>
        // Timer Variables
        let timerInterval;
        let elapsedTime = 0;
        let isPaused = false;

        // Timer Elements
        const timerDisplay = document.getElementById('timer');
        const startButton = document.getElementById('startButton');
        const pauseButton = document.getElementById('pauseButton');
        const stopButton = document.getElementById('stopButton');
        const saveWorkoutButton = document.getElementById('saveWorkoutButton');

        // Start Timer
        startButton.addEventListener('click', () => {
            if (!isPaused) elapsedTime = 0; // Reset if not paused
            isPaused = false;
            clearInterval(timerInterval); // Clear any existing interval
            timerInterval = setInterval(() => {
                elapsedTime += 1;
                timerDisplay.textContent = formatTime(elapsedTime);
            }, 1000);
        });

        // Pause Timer
        pauseButton.addEventListener('click', () => {
            isPaused = true;
            clearInterval(timerInterval);
        });

        // Stop Timer
        stopButton.addEventListener('click', () => {
            elapsedTime = 0;
            isPaused = false;
            clearInterval(timerInterval);
            timerDisplay.textContent = formatTime(elapsedTime);
        });

        // Save Workout
        saveWorkoutButton.addEventListener('click', () => {
            const workoutName = document.getElementById('workoutName').value;
            if (!workoutName.trim()) {
                alert('Please enter a workout name.');
                return;
            }

            // Mock save to database
            const workoutData = {
                name: workoutName,
                duration: formatTime(elapsedTime),
            };

            console.log('Saving workout:', workoutData);

            // In a real app, send this to your backend:
            // fetch('/api/workouts', {
            //     method: 'POST',
            //     headers: {
            //         'Content-Type': 'application/json',
            //     },
            //     body: JSON.stringify(workoutData),
            // }).then(response => {
            //     if (response.ok) alert('Workout saved successfully!');
            // });

            alert('Workout saved successfully!');
        });

        // Format Time Helper
        function formatTime(seconds) {
            const hours = Math.floor(seconds / 3600);
            const minutes = Math.floor((seconds % 3600) / 60);
            const secs = seconds % 60;
            return `${pad(hours)}:${pad(minutes)}:${pad(secs)}`;
        }

        // Zero Padding Helper
        function pad(num) {
            return num.toString().padStart(2, '0');
        }
    </script>

</body>
</html>
